package com.cardetails;
import com.constants.*;

public class CarInsurance implements Insurance{
	
	
	private double getPremiumRate(String carType) {
		
        switch (carType) {
            case HATCHBACK_TYPE:
            	
                return HATCHBACK_PREMIUM_RATE;
            case "Sedan":
                return SEDAN_PREMIUM_RATE;
            case "SUV":
                return SUV_PREMIUM_RATE;
            default:
                throw new IllegalArgumentException("Invalid car type: " + carType);
        }
    }

    @Override
    public double calculatePremium(double carCostPrice, String carType, String insuranceType) {
        double premium = carCostPrice * getPremiumRate(carType);
        if (insuranceType.equalsIgnoreCase("Premium")) {
            premium += PREMIUM_SURCHARGE_RATE * premium;
        }
        return premium;
    }
}

