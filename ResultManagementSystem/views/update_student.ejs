<%- include('partials/_header') %>
<%- include('partials/_navbar') %>
    <div class="update-student-all">
        <div class="filter">
            <button class="update-student-all-btn" onclick="location.href='/thome'">All students</button>
        </div>
    </div>
    <div class="container update-student-container">
        <% if(student) { %>
        <form method="POST" action="/edit" id="update_user" class="update-form">
            <h4 class="text-light text-center">Update Student</h4>
            <div class="new_user">
                <div class="form-group update-student-form-group ">
                    <label for="rollNo" class="update-student-label">Roll Number</label>
                    <input type="text" name="rollNo" class="form-control update-student-input" value="<%= student.rollNo %>" readonly>
                </div>
                <div class="form-group update-student-form-group ">
                    <label for="name" class="update-student-label">Name</label>
                    <input type="text" name="name" class = "form-control update-student-input" value="<%= student.name %>" required>
                </div>
                <div class="form-group update-student-form-group ">
                    <% var dob = new Date(student.dateOfBirth);
                    var dobFormatted = dob.toISOString().split('T')[0]; %>
                    <label class="update-student-label" for="dateOfBirth">Date of Birth</label>
                    <input type="date" class="form-control update-student-input" id="dateOfBirth" name="dateOfBirth"
                        value="<%= dobFormatted %>" min="1995-01-01" max="2016-12-31" required>
                </div>
                <div class="form-group update-student-form-group ">
                    <label for="score" class="form-label update-student-label">Score: </label>
                    <input type="number" class="form-control update-student-input" id="score" name="score" min="0" max="100"
                        value="<%= student.score %>" required>
                </div>
                <div class="form-group update-student-form-group text-center">
                    <button type="submit" class="btn-primary update index-login-btn">Save</button>
                </div>
            </div>
        </form>
        <% } %>
    </div>
<%- include('partials/_footer') %>
